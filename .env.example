# ===========================================
# 매일일독 Docker Compose 환경 변수 템플릿
# ===========================================
# 이 파일을 .env로 복사하여 실제 값을 입력하세요.
# cp .env.example .env

# ----- Database -----
DB_NAME=dailybible
DB_USER=dailybible_user
DB_PASSWORD=your_db_password
DB_ROOT_PASSWORD=your_root_password
DB_HOST=db
DB_PORT=3306

# ----- Service Ports -----
BACKEND_SERVICE_PORT=8000
MYSQL_SERVICE_PORT=3306
PHPMYADMIN_SERVICE_PORT=8080

# ----- Django Settings -----
DEBUG=True
SECRET_KEY=your_django_secret_key_here
ALLOWED_HOSTS=localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:3019"]

# ----- OAuth: Kakao -----
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_REDIRECT_URI=http://localhost:3019/auth/kakao/callback

# ----- OAuth: Google -----
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:3019/auth/google/callback

# ----- Email (Resend) -----
RESEND_API_KEY=your_resend_api_key
FROM_EMAIL=noreply@yourdomain.com

# ----- AI Services -----
# Google AI Studio에서 발급: https://aistudio.google.com/
GEMINI_API_KEY=your_gemini_api_key

# ----- YouTube Data API -----
# Google Cloud Console에서 YouTube Data API v3 활성화 필요
# GEMINI_API_KEY와 같은 키 사용 가능 (같은 프로젝트인 경우)
YOUTUBE_API_KEY=your_youtube_api_key

# ----- Celery (자동 요약 생성 스케줄러) -----
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# ----- Frontend -----
FRONTEND_URL=http://localhost:3019


